<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ezeagu.android.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LagosActivity"
            android:label="@string/lagos_guide"
            android:theme="@style/LagosTheme"/>

        <activity
            android:name=".AbujaActivity"
            android:label="@string/abuja_guide"
            android:theme="@style/AbujaTheme"/>

        <activity
            android:name=".AnambraActivity"
            android:label="@string/anambra_guide"
            android:theme="@style/AnambraTheme">

        </activity>
    </application>

</manifest>